{% extends 'baseAdmin.html.twig' %}


{% block body %}
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <div class="header-body" style="text-align: center">
                <h1 style="color: white">Attendances Configuration module</h1>
            </div>
        </div>
    </div>

    <div class="container-fluid mt--7">
        <!-- Table -->
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-md-9">
                                <h3 class="mb-0">Attendances Configuration</h3>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control " placeholder="Search Table" id="contact-filter">
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive" id="categoriesTable">
                        <table class="table align-items-center table-flush tablesorter tablepager">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Store</th>
                                <th scope="col">Bonus Amount</th>
                                <th scope="col">Malus Amount</th>
                                <th scope="col">Check-In Time</th>
                                <th scope="col">Check-Out Time</th>
                                <th scope="col" >Update</th>
                                <th scope="col" >Delete</th>
                            </tr>
                            </thead>
                            <tbody id="categoriesBody">
                            <!-- Loop -->
                            {% for attendanceConfig in attendancesConfig %}
                            <tr>
                                <td>{{ attendanceConfig.store }}</td>
                                <td>{{ attendanceConfig.bonusAmount }}</td>
                                <td>{{ attendanceConfig.malusAmount }}</td>
                                <td>{{ attendanceConfig.checkInTime | date('H:i') }}</td>
                                <td>{{ attendanceConfig.checkOutTime | date('H:i') }}</td>
                                <td >
                                    <a href=""  class="badge badge-info" >Update</a>
                                </td>
                                <td >
                                    <a href="" class="badge badge-danger">Delete</a>
                                </td>
                            </tr>
                            {% endfor %}
                            <!-- End Loop -->
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer py-4">
                    </div>
                </div>
            </div>
        </div>
        <a class="btn btn-icon btn-3 btn-primary" type="button" style="margin-top: 2em" href="{{ path('new_attendance_configuration') }}">
            <span class="btn-inner--icon"><i class="ni ni-fat-add"></i></span>
            <span class="btn-inner--text">Add a new configuration</span>
        </a>
    </div>




{% endblock %}
