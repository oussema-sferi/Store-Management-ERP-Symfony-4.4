{% extends 'baseAdmin.html.twig' %}


{% block body %}
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <div class="header-body" style="text-align: center">
                <h1 style="color: white">Stores</h1>
            </div>
        </div>
    </div>

    <div class="container-fluid mt--7">
        <!-- Table -->
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-md-9">
                                <h3 class="mb-0">Stores</h3>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control " placeholder="Search Table" id="contact-filter">
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive" id="categoriesTable">
                        <table class="table align-items-center table-flush tablesorter tablepager">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Store Name</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Login</th>
                                <th scope="col">Password</th>
                                <th scope="col">Status</th>
                                <th scope="col">Manager</th>
                                <th scope="col">Attendance Config</th>
                                <th scope="col">Creation Date</th>
                                <th scope="col" >Update</th>
                                <th scope="col" >Delete</th>
                            </tr>
                            </thead>
                            <tbody id="categoriesBody">
                            <!-- Loop -->
                            {% for store in stores %}
                            <tr>
                                <td>{{ store.name }}</td>
                                <td>{{ store.phone }}</td>
                                <td>{{ store.login }}</td>
                                <td>{{ store.password }}</td>
                                <td>{{ store.isActive }}</td>
                                <td>{{ store.manager }}</td>
                                <td>{{ store.attendanceConfiguration }}</td>
                                <td>{{ store.creationDate | date }}</td>
                                <td >
                                    <a href="{{ path('update_store', {'id': store.id}) }}"  class="badge badge-info" >Update</a>
                                </td>
                                <td >
                                    <a href="{{ path('delete_store', {'id': store.id}) }}" class="badge badge-danger">Delete</a>
                                </td>
                            </tr>
                            {% endfor %}
                            <!-- End Loop -->
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer py-4">
                    </div>
                </div>
            </div>
        </div>
        <a class="btn btn-icon btn-3 btn-primary" type="button" style="margin-top: 2em" href="{{ path('new_store') }}">
            <span class="btn-inner--icon"><i class="ni ni-fat-add"></i></span>
            <span class="btn-inner--text">Add a new store</span>
        </a>
    </div>




{% endblock %}
